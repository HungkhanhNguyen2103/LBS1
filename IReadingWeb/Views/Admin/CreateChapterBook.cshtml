    const input1 = document.getElementById("ContentDiv");
    const events = [
        "click", "focus", "blur", "change", "input",
        "keydown", "keyup", "keypress",
        "paste", "cut", "copy", "mousedown", "mouseup",
        "mouseenter", "mouseleave", "mouseover", "mouseout",
        "drag", "drop", "contextmenu"
    ];

    events.forEach(event => {
        input1.addEventListener(event, (e) => {
            getWordNo();

        });
    });

    input1.addEventListener("keyup", () => {
        quicklyCheckChapterContent();
    });

    let typingTimer;
    const doneTypingInterval = 2000;
    function quicklyCheckChapterContent(){
        clearTimeout(typingTimer);
        typingTimer = setTimeout(() => {
            let content = input1.innerText;
            checkChapterContentByAI(content);
        }, doneTypingInterval);
    }

    function cleanFormattingExceptBadWords(divId) {
        const div = document.getElementById(divId);

        const walker = document.createTreeWalker(div, NodeFilter.SHOW_ELEMENT, null, false);

        let nodesToRemoveFormat = [];

        while (walker.nextNode()) {
            const node = walker.currentNode;

            if (
                node.nodeType === Node.ELEMENT_NODE &&
                node.tagName.toLowerCase() !== "span" &&
                !node.classList.contains("highlight-bad-word")
            ) {
                nodesToRemoveFormat.push(node);
            }

            if (
                node.tagName.toLowerCase() === "span" &&
                !node.classList.contains("highlight-bad-word")
            ) {
                nodesToRemoveFormat.push(node);
            }
        }

        nodesToRemoveFormat.forEach(node => {
            const parent = node.parentNode;
            while (node.firstChild) {
                parent.insertBefore(node.firstChild, node);
            }
            parent.removeChild(node);
        });
    }


    function checkChapterContentByAI(content) {
        $('#loadingDivFeedBack').show();
        let formData = new FormData();
        formData.append('Data', content);
        $.ajax(
            {
                url: `/Admin/QuicklyApproveChapterContent`,
                type: "POST",
                headers:
                {
                    "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                },
                data: formData,
                //dataType: "json",
                async: true,
                processData: false,
                contentType: false,
                success: function (data) {
                    $('#loadingDivFeedBack').hide();
                    //console.log(data);
                    let matches = data.match(/<li.*?<\/li>/g);
                    //data = data.replace('<ul>', '').replace('</ul>', '').replace('```html', '').replace('```','');
                    if (data.includes("li")) $('#requestContent').prepend(matches);
                    $('#requestContent').prepend("<br>");

                    const matcheWords = [...data.matchAll(/<li.*?>'(.+?)'\s*=>/g)];
                    const words = matcheWords.map(m => m[1]);

                    let instance = new Mark(document.querySelector("#ContentDiv"));
                    instance.unmark({
                        done: function () {
                            instance.mark(words, {
                                element: "span",
                                className: "highlight-bad-word"
                            });
                        }
                    });

                    cleanFormattingExceptBadWords('ContentDiv');
                }
            }
        );
    }

    function changeFile(input) {
        document.getElementById("ContentDiv").innerText = "";
        if (input.files && input.files[0]) {
            let file = input.files[0];
            let typeName = file.type;
            if (typeName.includes('msword')){
                notyf.error("Vui lòng chọn file .docx hợp lệ!");
                getWordNo();
                return;
            }
            if (typeName == "application/vnd.openxmlformats-officedocument.wordprocessingml.document") {
                const reader = new FileReader();

                reader.onload = function (event) {
                    const arrayBuffer = event.target.result;

                    mammoth.extractRawText({ arrayBuffer: arrayBuffer })
                        .then(result => {
                            document.getElementById("ContentDiv").innerText = result.value;
                            getWordNo();
                        })
                        .catch(err => {
                            console.error("Lỗi đọc file:", err);
                            notyf.error("Không thể đọc file Word.");
                        });
                };

                reader.readAsArrayBuffer(file);
            }
            if (typeName == "text/plain") {
                //console.log("text");
                const reader = new FileReader();

                reader.onload = function (e) {
                    const text = e.target.result;
                    document.getElementById("ContentDiv").innerText = text;
                    getWordNo();
                };

                reader.readAsText(file);
            }
            if (typeName == "application/pdf") {

                const reader = new FileReader();

                reader.onload = function () {
                    const typedArray = new Uint8Array(reader.result);

                    pdfjsLib.getDocument(typedArray).promise.then(async function (pdf) {
                        let textContent = '';

                        for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                            const page = await pdf.getPage(pageNum);
                            const content = await page.getTextContent();
                            const strings = content.items.map(item => item.str).join(' ');
                            textContent += `Trang ${pageNum}:\n${strings}\n\n`;
                        }


                        document.getElementById("ContentDiv").innerText = textContent;
                        getWordNo();
                    });
                };

                reader.readAsArrayBuffer(file);
            }
        
        }
    }


    function SaveDraft(){
        $('#Type').val('3');
        $('#formBody').submit();
    }

    function changeType(){
        let type = $('#Type').val();
        if (type == 2) {
            $("#ChaperId").attr("hidden", false);
            $('#StartChapterIdText').hide();
        }
        else if (type == 1) {
            $("#ChaperId").attr("hidden", true);
            $('#StartChapterIdText').show();
        }
    }

    function getWordNo(){
        // var delta = quill.getContents();
        // var text = JSON.stringify(delta);
        var textDiv = $('#ContentDiv').text();
        $('#Content').val(textDiv);
        var text = textDiv;
        let words = text.length > 0 ? text.split(/\s+/) : [];

        $('#wordNoCount').html(words.length);
        $('#WordNo').val(words.length);
    }



